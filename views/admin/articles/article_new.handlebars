<div class="container-fluid">
    <div class="row">
        <div class="col col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h5>Cadastro de Artigo</h5>
                </div>
                <div class="card-body">
                    <form action="/articles/save" method="POST">
                        <input type="text" name="title" class="form-control mb-3" id="select" placeholder="TÃ­tulo do artigo">
                        <textarea name="body" id="article" cols="30" rows="10" class="form-control" placeholder="Escreva o artigo aqui"></textarea>
                        <h6 class="text-muted mt-3">Categria:</h6>
                        <select name="category" class="form-control" id="">
                            {{#each categories}}
                                <option value="{{id}}">{{slug}}</option>
                            {{/each}}
                        </select>
                        <button type="submit" class="btn btn-success mt-3">Cadastrar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>