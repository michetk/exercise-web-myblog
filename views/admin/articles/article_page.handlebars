<div class="container-fluid">
    <div class="row">
        {{#each result.articles.rows}}
        <div class="col col-lg-12 mb-2">
            <div class="card">
                <div class="card-header">
                    {{title}}
                </div>
                <div class="card-body">
                    <a href="/{{slug}}" class="btn btn-success">Ler Mais</a>
                </div>
            </div>
        </div>
        {{else}}
        <h2 class="text-danger">NÃ£o tem ARTIGOS</h2>
        {{/each}}
    </div>
    <div class="row">
        <div class="col col-lg-12">
            {{#if result.prevpage}}
            <a href="/article/page/{{result.pageprev}}" style="float: left">&lt;&lt;&lt; Prev</a>
            {{/if}}
            {{#if result.next}}
            <a href="/article/page/{{result.pagenext}}" style="float: right">Next &gt;&gt;&gt;</a>
            {{/if}}
        </div>
    </div>
</div>